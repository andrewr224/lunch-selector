%h1= "Menu for #{@facade.menu.day_stamp}"
%h2= t('views.menus.orders')

%ul
  = render partial: 'orders/order', collection: @facade.orders, as: :order, locals: { facade: @facade }

%p= "#{t('views.menus.total_cost')}: #{@facade.total_cost}" if @facade.show_price?(current_user)

- if @facade.placed_order?(current_user)
  %p Your order has been placed
- elsif allow_modification?(@facade.menu)
  = render 'orders/form', order: @facade.new_order

- if current_user.admin?
  = link_to t('views.menus.manage_meals'), edit_menu_path(@facade.menu)
  %br
  = link_to t('views.menus.delete'), menu_path(@facade.menu), method: :delete
  %br
= link_to t('views.menus.dashboard'), menus_path
